---
interface Props {
	node: {
		buttonText: string
		url: string
		style?: 'primary' | 'secondary'
	}
}

const {node} = Astro.props
const isPrimary = node.style !== 'secondary'
---

<div
	class="cta-container my-10 rounded-3xl border-2 border-dashed border-slate-200 bg-slate-50 p-8 text-center">
	<h3 class="mb-4 text-xl font-bold text-slate-900">
		Interested in Joining Our Center?
	</h3>
	<a
		href={node.url}
		class={`inline-block px-10 py-4 rounded-full font-bold transition-all transform hover:scale-105 active:scale-95 ${
			isPrimary
				? 'bg-blue-600 text-white shadow-lg shadow-blue-200 hover:bg-blue-700'
				: 'bg-white text-blue-600 border-2 border-blue-600 hover:bg-blue-50'
		}`}>
		{node.buttonText || 'Enroll Now'}
	</a>
</div>
