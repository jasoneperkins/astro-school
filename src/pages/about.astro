---
import Layout from '@layouts/Common.astro'
import Header from '@landmarks/Header.astro'
import {Image} from 'astro:assets'

import OurStory01 from '@images/man-kids-books.jpg'
import HowWeLearn01 from '@images/woman-kids-board-globe-table.webp'
import HowWeLearn02 from '@masks/sketch.svg'

import mainImage from '@images/woman-kids-board-globe-table.webp'

const title = 'About Us'
---

<Layout {title}>
	<Header {title} {mainImage} />
	<section class="items-center">
		<div class="half relative">
			<Image src={OurStory01} alt="" class="rounded-full" />
			<div
				class="absolute top-2 right-6 size-36 rounded-full bg-linear-35 from-orange-500 to-orange-200">
			</div>
		</div>
		<div class="half">
			<header>
				<hgroup class="flex flex-col-reverse">
					<h2>Our Mission</h2>
					<p>A Safe, Nurturing, and Inclusive Community</p>
				</hgroup>
			</header>
			<p>
				We provide educational programs for preschool-aged children of all
				faiths. Within our Reform Jewish setting, we focus on treating each
				individual with dignity, creating an environment where every child and
				family feels welcome and included.
			</p>
		</div>
	</section>
	<section class="breakout text-center">
		<header>
			<hgroup>
				<h2>Our Core Values</h2>
				<p>Our Activities</p>
			</hgroup>
		</header>
		<div
			class="grid grid-cols-1 justify-center gap-2 md:grid-cols-2 lg:grid-cols-4">
			<div class="px-4 py-6 hover:!border-t-red-500">
				<img
					loading="lazy"
					decoding="async"
					width="60"
					height="52"
					src="https://backtheme.com/university/wp-content/uploads/2023/04/cat_img_h_1_3.png"
					alt=""
				/>
				<h3 class="!text-lg">Business &amp; Management</h3>
				<p>01 Course</p>
			</div>
			<div class="px-4 py-6 hover:!border-t-blue-500">
				<img
					loading="lazy"
					decoding="async"
					width="60"
					height="52"
					src="https://backtheme.com/university/wp-content/uploads/2023/04/cat_img_h_1_3.png"
					alt=""
					5
				/>
				<h3 class="!text-lg">Business &amp; Management</h3>
				<p>01 Course</p>
			</div>
			<div class="px-4 py-6 hover:!border-t-green-500">
				<img
					loading="lazy"
					decoding="async"
					width="60"
					height="52"
					src="https://backtheme.com/university/wp-content/uploads/2023/04/cat_img_h_1_3.png"
					alt=""
				/>
				<h3 class="!text-lg">Business &amp; Management</h3>
				<p>01 Course</p>
			</div>
			<div class="px-4 py-6 hover:!border-t-orange-500">
				<img
					loading="lazy"
					decoding="async"
					width="60"
					height="52"
					src="https://backtheme.com/university/wp-content/uploads/2023/04/cat_img_h_1_3.png"
					alt=""
				/>
				<h3 class="!text-lg">Business &amp; Management</h3>
				<p>01 Course</p>
			</div>
		</div>
	</section>
	<section class="items-center">
		<div class="half">
			<header>
				<hgroup class="flex flex-col-reverse">
					<h2>Our History</h2>
					<p>From a Dream to a Reality</p>
				</hgroup>
			</header>
			<p>
				The ECLC started as a dream to teach and enrich the lives of young
				children in our community. Since our founding, we have grown into a
				cornerstone of early education, dedicated to nurturing the hearts and
				minds of the next generation.
			</p>
		</div>
		<div class="half">
			<Image
				src={HowWeLearn01}
				alt=""
				width={700}
				height={379}
				class="rounded-tr-4xl rounded-bl-4xl mask-contain mask-no-repeat"
			/>
		</div>
	</section>
</Layout>
